   "prereqs": {
      "runtime": {
        "requires": {
           "PostgreSQL": "9.6.0",
           "pg_stat_statements": 0,
           "plpgsql": 0
        }
      }
   },
   "resources": {
       "homepage": "http://big-elephants.com/pg-telemetry/",
